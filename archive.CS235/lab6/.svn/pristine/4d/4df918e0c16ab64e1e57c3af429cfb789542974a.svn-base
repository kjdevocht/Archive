		}
		//The left child is NULL but there is a right child
		else if( node->get_left() == NULL && node->get_right() != NULL)
		{
		cout<<"real_remove:  right child only"<<endl;
			Node* temp;
			temp = node->get_right();
			cout<<"rea_remove: what you are about to delete "<<node->get_item()<<endl;
			delete node;
