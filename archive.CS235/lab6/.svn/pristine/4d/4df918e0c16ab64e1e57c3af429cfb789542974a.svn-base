			return node;
		}
		else
		{
		cout<<"real_remove:  going left"<<endl;
			node->set_left(real_remove(node->get_left(), item));
			node = balance(node);
			node->set_height(node);
			return node;
		}
	}
	//check to see if you should go right
	else if (item > node->get_item())
	{
	cout<<"real_remove:  the current node's item is smaller than the item we are looking for so go right"<<endl;
		if (node->get_right() == NULL)
		{
		cout<<"real_remove:  should go right but is NULL item not in set"<<endl;
			return node;
		}
		else
		{
		cout<<"real_remove:  going right"<<endl;
			node->set_right(real_remove(node->get_right(), item));
			node = balance(node);
			node->set_height(node);
			return node;
		}
	}
	//you have found what you are looking for
	else
	{
